  </p>

  <p>
    <%= f.label :zip, 'Zip Code' %><br />
    <%= f.text_field :zip %>
  </p>

  <!-- must be 18 years or older -->
  <div class="field">
    <%= f.label :dob, "Date of Birth" %><br />
    <%= f.date_select :dob, order: [:day, :month, :year],
      end_year: 1954, start_year: Time.now.year-18 %>
  </div>

  <h3>
    Profile Information
  </h3>

  <p>
    <%= f.label :ethnicity %><br />
    <%= f.select :ethnicity, options_for_select(%w[White Asian Black Hispanic Other]) %>
  </p>

  <p>
    <%= f.label :height, "Height (in inches)" %><br />
    <%= f.number_field :height, min:50 %>
  </p>

  <p>
    <%= f.label :weight, "Weight (in pounds)" %><br />
    <%= f.number_field :weight, min:100 %>
  </p>

  <p>
    <%= f.label :tit_size, "Breast Size" %><br />
