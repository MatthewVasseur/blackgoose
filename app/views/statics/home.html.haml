          %ul.nav.navbar-nav
            - if client_signed_in?
              %li
                = link_to "Log Out", destroy_client_session_path, method: :delete
              %li
                = link_to "My Profile", profile_client_path
              %li
                = link_to "Escorts", escorts_path

