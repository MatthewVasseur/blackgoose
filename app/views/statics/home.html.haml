%body#page-top.body{data: {spy: "scoll", target: "navbar-fixed-top"}}
  %nav.navbar.navbar-custom.navbar-fixed-top{role:"navigation"}
    .container
      .navbar-header
        %button.navbar-toggle{type: "button", |
        data: {toggle:"collapse", target:".navbar-main-collapse"}} |
          %i.fa.fa-bars
